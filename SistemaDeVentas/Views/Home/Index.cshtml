@model LoginViewModel
@{
    ViewData["Title"] = "Login";

  
}

<center>

    <div class="container">
        
            <div class="ro">
                <div class="col s12 m7">

                    <div class="card">
                        <div class="card-content">
                            <center><h4>Iniciar Sesión.</h4></center>
                            <section>
                                <form asp-controller="Home" asp-action="Index" method="post">                                     
                                   
                                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                    <div class="input-field col s12">
                                        <label asp-for="Input.Email" class="text-left text-darken-2"></label>
                                        <input asp-for="Input.Email"  class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="input-field col s12">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password "  class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <center>
                                        <button type="submit" id="bntLogin" class="waves-effect waves-light btn">Iniciar sesión.</button> 
                                    </center>                                      
                                </form>
                            </section>  <br />  
                                        <label style="color:red; font-size:x-large; font-weight:bold; font-style:oblique;" id="indexMessage" class="has-error">@Html.DisplayFor(model => model.ErrorMessage)</label>
                            <br />
                        </div>
                   
                    </div>

                </div>
            </div>
        </div>
   
</center>

@section Scripts{ 

    @await Html.PartialAsync("_ValidationScriptsPartial")

}


