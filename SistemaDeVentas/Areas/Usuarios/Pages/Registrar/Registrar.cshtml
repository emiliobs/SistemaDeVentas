@page
@model SistemaDeVentas.Areas.Usuarios.Pages.Registrar.RegistrarModel
@{
}

<div id="" class="container2">
    <form action="/" method="post" enctype="multipart/form-data">
        <div class="modal-content" id="myModal">
            <center>
                <h5>Registrar Usuarios.</h5>
            </center>
            <div class="row">
                <div class="col s9 m6">
                    <div class="card">
                        <div class="card-content white-text">
                            <center>
                                <span class="card-title blue-grey-text">Foto o Imagen</span>
                                <output id="foto">
                                    <img src="~/images/foto/default.png" alt="Avatar" class="responsive-img" />
                                </output>
                            </center>
                        </div>
                        <div class="card-action">
                            <a>
                                <div class="file-field">
                                    <div class="btn waves-effect waves-light">
                                        <span>Subir Imagen.</span>
                                        <input type="file" accept="image/*" id="files" name="files" />
                                    </div>
                                   <br />
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

        </div>
    </form>
</div>
